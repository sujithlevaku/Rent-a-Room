
<% if @rooms.empty? %>
  <h2>No Rooms Found</h2>
<% else %>
  <h2>Listing Unauthorized Rooms</h2>
  <ul>
    <% @rooms.each do |room| %>
      <li>
        <p> Name : <%= room.name %> </p>
        <p> Is_Authorized : <%= room.is_authorized %> </p>
        <p> Room Owner : <%= room.user.username %> </p>

        <p>
          <%= form_for room do |f| %>
            <%= f.hidden_field :is_authorized, value: true %>
            <%= f.submit "Authorize Room"%>
          <% end %>
        </p>
        <p><%= link_to "Show", room_path(room.id) %></p>
        <%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } %>
      </li>
    <% end %>
  </ul>
<% end %>
